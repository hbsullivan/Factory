@{
  Layout = "_Layout";
}

@using Factory.Models;

<h2>Available Engineers</h2>
<hr />

@if (Model.Count == 0)
{
  <h3>There are no available engineers.</h3>
}
else
{
  <ul>
    @foreach (Engineer engineer  in Model)
    {
      <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId})</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add Engineer", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>